{
  "name": "@wave-client/vscode",
  "displayName": "Wave Client",
  "description": "A modern, intuitive REST client for VS Code using React and Tailwind CSS",
  "version": "0.0.1",
  "publisher": "wave-client",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "waveclient.open",
        "title": "Wave Client: Open Wave Client"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "build:css": "tailwindcss -i src/webview/index.css -o dist/webview/index.css --minify",
    "build:css:watch": "tailwindcss -i src/webview/index.css -o dist/webview/index.css --watch",
    "build:webview": "npm run build:css && webpack --config src/webview/webpack.webview.config.js",
    "watch:webview": "concurrently \"npm run build:css:watch\" \"webpack --config src/webview/webpack.webview.config.js --watch\"",
    "build": "npm run compile && npm run build:webview"
  },
  "dependencies": {
    "@wave-client/core": "workspace:*",
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "esbuild-loader": "^4.4.1",
    "eslint": "^9.34.0",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.543.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "style-loader": "^4.0.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "zustand": "^5.0.8"
  }
}
