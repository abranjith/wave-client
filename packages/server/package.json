{
  "name": "@wave-client/server",
  "version": "0.0.1",
  "description": "Fastify server for Wave Client web app - handles all I/O operations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wave-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@wave-client/shared": "workspace:*",
    "fastify": "^5.2.1",
    "@fastify/cors": "^10.0.2",
    "@fastify/websocket": "^11.0.2",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "src"
  ]
}
